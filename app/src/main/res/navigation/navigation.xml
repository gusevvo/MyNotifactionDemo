<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/launchFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.mynotifactiondemo.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/launchFragment"
        android:name="com.example.mynotifactiondemo.ui.LaunchFragment"
        android:label="Веселый франшизник"
        tools:layout="@layout/fragment_launch">
        <action
            android:id="@+id/action_launchFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mynotifactiondemo.ui.LoginFragment"
        android:label="Вход в систему"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_myTransportationsFragment"
            app:destination="@id/myTransportationsFragment" />
    </fragment>
    <fragment
        android:id="@+id/cargoesFragment"
        android:name="com.example.mynotifactiondemo.ui.cargoes.CargoesFragment"
        android:label="Грузы"
        tools:layout="@layout/fragment_cargoes" />
    <fragment
        android:id="@+id/myTransportationsFragment"
        android:name="com.example.mynotifactiondemo.ui.cargoes.own.list.MyTransportationsFragment"
        android:label="Мои перевозки"
        tools:layout="@layout/fragment_my_transportations">
        <action
            android:id="@+id/action_myTransportationsFragment_to_myTransportationDetailsFragment"
            app:destination="@id/myTransportationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/myTransportationDetailsFragment"
        android:name="com.example.mynotifactiondemo.ui.cargoes.own.details.MyTransportationDetailsFragment"
        android:label="Перевозка"
        tools:layout="@layout/fragment_my_transportation_details">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
</navigation>